{
  "auto_scaling": {
    "enabled": true,
    "strategy": "HYBRID",
    "model": "phi3:mini",
    
    "gpu_scaling": {
      "min_agents": 1,
      "max_agents": 8,
      "memory_buffer_mb": 1024,
      "memory_safety_margin": 0.15,
      "scale_up_threshold": 0.75,
      "scale_down_threshold": 0.40,
      "scale_check_interval": 15.0,
      "cooldown_period": 30.0
    },
    
    "workload_scaling": {
      "high_queue_length": 10,
      "high_wait_time": 30.0,
      "high_cpu_usage": 80.0,
      "high_memory_usage": 85.0,
      "low_idle_agents": 0.2,
      "agent_overload_threshold": 0.8,
      "scale_up_cooldown": 60.0,
      "scale_down_cooldown": 120.0
    },
    
    "dynamic_agent_management": {
      "max_agents": 16,
      "min_agents": 1,
      "agent_timeout_seconds": 300,
      "idle_timeout_seconds": 600,
      "cleanup_interval_seconds": 60,
      "batch_creation_size": 3,
      "graceful_shutdown_timeout": 30
    },
    
    "strategies": {
      "GPU_MEMORY_BASED": {
        "description": "Skaliert basierend auf verf√ºgbarem GPU-Speicher",
        "best_for": "Systeme mit begrenztem GPU-Speicher",
        "priority": "gpu_memory"
      },
      "WORKLOAD_BASED": {
        "description": "Skaliert basierend auf Task-Queue und Auslastung",
        "best_for": "Queue-intensive Anwendungen", 
        "priority": "workload_metrics"
      },
      "HYBRID": {
        "description": "Kombiniert GPU- und Workload-Metriken",
        "best_for": "Ausgewogene Systeme (empfohlen)",
        "priority": "consensus"
      },
      "CONSERVATIVE": {
        "description": "Vorsichtige Scaling-Entscheidungen",
        "best_for": "Produktive Umgebungen",
        "priority": "stability"
      },
      "AGGRESSIVE": {
        "description": "Proaktive Scaling-Entscheidungen",
        "best_for": "Entwicklung und Testing",
        "priority": "performance"
      }
    },
    
    "model_requirements": {
