# Enhanced Ollama Flow Framework - Environment Configuration

# ============================================================================
# AGENT CONFIGURATION
# ============================================================================

# Number of worker agents (default: 4)
OLLAMA_WORKER_COUNT=6

# Number of sub-queen agents for hierarchical mode (default: 2)
OLLAMA_SUB_QUEEN_COUNT=2

# Architecture type: HIERARCHICAL, CENTRALIZED, or FULLY_CONNECTED (default: HIERARCHICAL)
OLLAMA_ARCHITECTURE_TYPE=HIERARCHICAL

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================

# Ollama model to use (default: codellama:7b)
# Popular options: codellama:7b, llama3, llama3:8b, mistral:7b
OLLAMA_MODEL=codellama:7b

# Enable parallel LLM calls for better performance (true/false)
OLLAMA_PARALLEL_LLM=true

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Enable enhanced security mode with command sandboxing (true/false)
OLLAMA_SECURE_MODE=true

# Project folder path for agent file operations (optional)
# Agents will be restricted to this directory when secure mode is enabled
OLLAMA_PROJECT_FOLDER=./projects

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

# Enable performance metrics collection (true/false)
OLLAMA_METRICS=true

# Maximum execution time for commands in seconds (default: 30)
OLLAMA_MAX_EXECUTION_TIME=30

# Maximum output size for commands in characters (default: 10000)
OLLAMA_MAX_OUTPUT_SIZE=10000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database path for message storage (default: ollama_flow_messages.db)
OLLAMA_DB_PATH=ollama_flow_messages.db

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
OLLAMA_LOG_LEVEL=INFO

# ============================================================================
# EXAMPLES
# ============================================================================

# High-performance configuration for complex tasks:
# OLLAMA_WORKER_COUNT=8
# OLLAMA_ARCHITECTURE_TYPE=HIERARCHICAL
# OLLAMA_SUB_QUEEN_COUNT=3
# OLLAMA_MODEL=codellama:7b
# OLLAMA_PARALLEL_LLM=true
# OLLAMA_SECURE_MODE=true

# Simple configuration for basic tasks:
# OLLAMA_WORKER_COUNT=3
# OLLAMA_ARCHITECTURE_TYPE=CENTRALIZED
# OLLAMA_MODEL=codellama:7b
# OLLAMA_SECURE_MODE=true

# Development/testing configuration:
# OLLAMA_WORKER_COUNT=2
# OLLAMA_ARCHITECTURE_TYPE=CENTRALIZED
# OLLAMA_MODEL=codellama:7b
# OLLAMA_SECURE_MODE=false
# OLLAMA_LOG_LEVEL=DEBUG
# OLLAMA_METRICS=true